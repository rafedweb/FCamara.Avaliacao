@model FCamara.App.Models.FuncionarioViewModel

@{
    ViewData["Title"] = "Pesquisar Funcionarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Pesquisar</li>
    </ol>
</nav>

<hr />

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-12">
        <form asp-action="Pesquisar">
            <div class="form-row">
                <div class="form-group col-md-12">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="CPF" class="control-label"></label>
                    <input asp-for="CPF" class="form-control" />
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Nascimento" class="control-label"></label>
                    <input asp-for="Nascimento" class="form-control" />
                </div>
                <div class="form-group col-md-2">
                    <label asp-for="Sexo" class="control-label"></label><br />
                    <input type="radio" value="1" asp-for="Sexo" checked /> Masculino<br />
                    <input type="radio" value="2" asp-for="Sexo" /> Feminino
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Ativo" checked /> @Html.DisplayNameFor(model => model.Ativo)
                    </label>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Pesquisar" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

<hr />


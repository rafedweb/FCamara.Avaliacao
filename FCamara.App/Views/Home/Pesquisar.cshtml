@model FCamara.App.Models.FuncionarioViewModel

@{
    ViewData["Title"] = "Pesquisar Funcionarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Pesquisar</li>
    </ol>
</nav>

<hr />

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-12">
        <form asp-action="Pesquisar">
            <div class="form-row">
                <div class="form-group col-md-12">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" id="Nome" />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="CPF" class="control-label"></label>
                    <input asp-for="CPF" class="form-control" id="CPF"/>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Nascimento" class="control-label"></label>
                    <input asp-for="Nascimento" class="form-control" id="Nascimento"/>
                </div>
                <div class="form-group col-md-2">
                    <label for="Sexo">Sexo</label>
                    <select name="Sexo" id="Sexo">
                        <option value="0">Ambos</option>
                        <option value="1">Masculino</option>
                        <option value="2">Feminino</option>                        
                    </select>                   
                </div>
                <div class="form-group col-md-2">
                    <label for="Ativo">Ativo</label>
                    <select name="Ativo" id="Ativo">
                        <option value="0">Ambos</option>
                        <option value="1">Ativo</option>
                        <option value="2">Inativo</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <input type="button" value="Pesquisar" class="btn btn-dark" id="pesquisar" />
            </div>
        </form>
    </div>
</div>

<hr />

<partial name="_ListaFuncionarios" />


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        PesquisarFuncionario();
    </script>
}